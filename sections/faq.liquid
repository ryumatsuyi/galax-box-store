<h2>{{ section.settings.heading }}</h2>

<h4>{{ section.settings.question }}</h4>
<p>{{ section.settings.answer }}</p>

{% schema %}
    {
        "name": "customer questions",
        "settings": [
            {
                "type": "text",
                "label": "heading for faq",
                "id": "heading"
            },
            {
                "type": "text",
                "label": "customer questions",
                "id": "question"
            },
            {
                "type": "textarea",
                "label": "answer for faq",
                "id": "answer"
            }
        ]
    }
{% endschema %}